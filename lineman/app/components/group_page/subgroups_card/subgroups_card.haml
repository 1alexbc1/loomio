%section.group-page-subgroups{ng_show: '!group.parentId', role: 'region', aria-labelledby: 'subgroups-card-title'}
  #subgroups-card-title.card-title{ translate: 'group_page.subgroups', role: 'heading' }
  .subgroup-list
    .media.subgroup-list-item{ng-repeat: 'subgroup in group.subgroups()'}
      .media-left
        .subgroup-list-item-logo
      .media-body
        .subgroup-list-item-name
          %a{href: '/g/{{subgroup.key}}'} {{ subgroup.name }}
        / this should be truncated down to a few dozen chars
        / do we want to use this? https://github.com/sparkalow/angular-truncate
        .subgroup-list-item-description {{ subgroup.description }}

    .card-minor-action{ng-if: '::canCreateSubgroups()'}
      %a{href: '/g/{{group.key}}/subgroups/new'}
        %span{aria-hidden:'true'}>+
        %span{ translate: 'common.action.add_subgroup' }
