%li.dropdown-menu-item{ng_click: "changeVolume()"}
  .dropdown-menu-item-label
    %i.fa.fa-lg.fa-volume-up{ng-show: 'volume == "email"'}>
    %i.fa.fa-lg.fa-volume-down{ng-show: 'volume == "normal"'}>
    %i.fa.fa-lg.fa-volume-off{ng-show: 'volume == "mute"'}>
    %span{translate: "common.notifications.{{volume}}"}
    %i.fa.fa-lg.fa-check{ng-show: "model.volume == '{{volume}}'"}
  .dropdown-menu-item-details
    %span{translate: "{{translateRoot}}.notifications.{{volume}}"}
