.thread-item{ng-controller: "PollEditedItemController"}
  .thread-item__header.media
    .media-left
      %user_avatar{ng-if: "event.actor()", user: "event.actor()", size: "small"}
    .media-body
      %h3.thread-item__title{id: "event-{{event.id}}"}
        %span{translate: "poll_thread_item.poll_{{poll.pollType}}_edited", translate-values: "{author: event.actor().name, title: poll.title}"}>
