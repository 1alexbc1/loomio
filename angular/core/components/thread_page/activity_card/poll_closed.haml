.thread-item{ng-controller: "PollClosedItemController"}
  .thread-item__header.media
    .media-left
      %user_avatar{ng-if: "event.actor()", user: "event.actor()", size: "small"}
    .media-body
      %h3.thread-item__title{ng-if: "event.actor()", id: "event-{{event.id}}"}
        %strong> {{ event.actor().name }}
        %span{translate: "poll_thread_item.{{poll.pollType}}_poll_closed_by_user"}>
        %span {{ poll.title }}
      %h3.thread-item__title{ng-if: "!event.actor()", id: "event-{{event.id}}"}
        %span{translate: "poll_thread_item.{{poll.pollType}}_poll_closed"}>
        %span {{ poll.title }}
