      %user_avatar{user: "poll.author()", size: "small"}
    .media-body
      %h3.thread-item__title{id: "event-{{event.id}}"}
        %span{translate: "poll_thread_item.poll_{{poll.pollType}}_expired", translate-values: "{title: poll.title}"}>
