.lmo-one-column-layout
  %loading{ng-show: "oauthApplicationsPage.loading"}
  %main.oauth-applications-page{ng-if: "!oauthApplicationsPage.loading"}
    %h1.lmo-h1{translate: "oauth_applications_page.title"}
    %hr
    .lmo-placeholder{ng-if: "oauthApplicationsPage.applications().length == 0", translate: "oauth_applications_page.no_applications"}
    .oauth-applications-page__table{ng-if: "oauthApplicationsPage.applications().length > 0"}
      .row.oauth-applications-page__table-row
        .lmo-bold.col-xs-3{translate: "oauth_applications_page.name"}
        .lmo-bold.col-xs-7{translate: "oauth_applications_page.redirect_uris"}
        .lmo-bold.col-xs-2.align-center{translate: "common.action.remove"}
      .row.oauth-applications-page__table-row{ng-repeat: "application in oauthApplicationsPage.applications()"}
        .col-xs-3
          %span.lmo-inline-block.oauth-applications-page__headlight{ng-class: "{'oauth-applications-page--authorized': application.authorized, 'oauth-applications-page--unauthorized': !application.authorized }"}>
          %a.oauth-applications-page__name{lmo-href-for: "application"}
            {{ application.name }}
        .col-xs-7
          %code.oauth-applications-page__code{ng-repeat: "uri in application.redirectUriArray()"}
            {{uri}}
        .col-xs-2.align-center
          %button.oauth-applications-page__remove-link{ng-click: "oauthApplicationsPage.openDestroyForm(application)"}
            %i.fa.fa-lg.fa-times-circle
        .clearfix
    %hr
    %button.lmo-btn.lmo-btn--submit{translate: "oauth_applications_page.create_new_application", ng-click: "oauthApplicationsPage.openApplicationForm()"}
