%md-dialog.poll-common-modal
  %form.poll-poll-vote-form
    .lmo-disabled-form{ng-show: "isDisabled"}
    .modal-header.poll-common-modal-header
      %i.material-icons equalizer
      %h1.lmo-h1{ng-if: "stance.isNew()", translate: "poll_common.your_response"}
      %h1.lmo-h1{ng-if: "!stance.isNew()", translate: "poll_common.change_your_response"}
      %modal_header_cancel_button

    .modal-body
      .poll-poll-vote-form__options{ng-if: "!stance.poll().multipleChoice"}
        %md-radio-group{ng-model: "vars.pollOptionId"}
          %md-radio-button.poll-poll-vote-form__radio-button{ng-repeat: "option in stance.poll().pollOptions()", ng-value: "option.id"}
            %span.poll-poll-vote-form__chosen-option--name {{option.name}}
      .poll-poll-vote-form__options{ng-if: "stance.poll().multipleChoice"}
        %md-checkbox.poll-poll-vote-form__checkbox{ng-repeat: "option in stance.poll().pollOptions()", ng-model: "pollOptionIdsChecked[option.id]"}
          %span.poll-poll-vote-form__chosen-option--name {{option.name}}

      %md-input-container.md-block
        %label{translate: "poll_common.reason"}
        %input.lmo-primary-form-input{type: "text", placeholder: "{{translations.reasonPlaceholder}}", ng-model: "stance.reason", mention-field: "true", md-maxlength: "250"}
        %validation_errors{subject: "stance", field: "reason"}

    .modal-footer
      %md-button.md-primary.md-raised{ng-click: "submit()", translate: "poll_common.vote", aria-label: "{{ 'poll_common.vote' | translate }}"}
