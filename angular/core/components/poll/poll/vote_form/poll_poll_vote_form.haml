%form.poll-poll-vote-form
  .lmo-disabled-form{ng-show: "isDisabled"}
  .modal-header.lmo-poll-modal-header
    %i.material-icons equalizer
    %h1.lmo-h1{ng-if: "stance.isNew()", translate: "poll_poll_vote_form.have_your_say"}
    %h1.lmo-h1{ng-if: "!stance.isNew()", translate: "poll_poll_vote_form.change_your_stance"}
    %modal_header_cancel_button

  .modal-body
    %label{translate: "poll_common.your_response"}
    %md-radio-group{ng-model: "pollOption"}
      %md-radio-button.poll-poll-vote-form__radio-button{ng-repeat: "option in stance.poll().pollOptions()", ng-value: "option"}
        %span.poll-poll-vote-form__chosen-option--name {{option.name}}

    %md-input-container.md-block
      %label{translate: "poll_poll_vote_form.reason"}
      %input.lmo-primary-form-input{type: "text", placeholder: "{{translations.reasonPlaceholder}}", ng-model: "stance.reason", mention-field: "true", md-maxlength: "250"}
      %validation_errors{subject: "stance", field: "reason"}

  .modal-footer
    %md-button.md-primary.md-raised{ng-click: "submit()", translate: "poll_poll_vote_form.vote"}
