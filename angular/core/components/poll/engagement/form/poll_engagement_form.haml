%form.poll-proposal-form
  .modal-header.lmo-poll-modal-header
    %i.material-icons thumbs_up_down
    %h1.lmo-h1{ng-if: "poll.isNew()", translate: "poll_engagement_form.new_engagement_check"}
    %h1.lmo-h1{ng-if: "!poll.isNew()", translate: "poll_engagement_form.update_engagement_check"}
    %modal_header_cancel_button
  .modal-body
    .poll-proposal-form__tip
      %p{translate: "poll_engagement_form.tip"}
      %poll_common_school_link{href: "https://loomio.school/beginner/engagements.html", translation: "poll_engagement_form.learn_more"}

    %input{type: "hidden", ng-model: "poll.pollType"}

    %md-input-container.md-block
      %label{translate: "poll_engagement_form.title"}
      %input.lmo-primary-form-input{type: "text", placeholder: "{{translations.titlePlaceholder}}", ng-model: "poll.title", md-maxlength="200"}
      %validation_errors{subject: "poll", field: "title"}

    %md-input-container.md-block
      %label{translate: "poll_engagement_form.details"}
      %textarea.lmo-primary-form-input{ng-model: "poll.details", placeholder: "{{translations.detailsPlaceholder}}"}
      %validation_errors{subject: "poll", field: "details"}

    %poll_closing_at_field.md-block{poll: "poll"}
    %poll_common_notify_group{model: "poll"}

  .modal-footer
    %md-button.md-primary.md-raised{ng-click: "submit()", ng-if: "!poll.isNew()", translate: "poll_engagement_form.update"}
    %md-button.md-primary.md-raised{ng-click: "submit()", ng-if: "poll.isNew()", translate: "poll_engagement_form.start"}
