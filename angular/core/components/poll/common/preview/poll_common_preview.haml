  %progress_chart{ng-if: "chartType() == 'progress'", stance_data: "poll.stanceData", goal: "poll.goal()", size: "50"}
  %poll_proposal_pie_chart{ng-if: "chartType() == 'pie'", stance_data: "poll.stanceData", my_stance: "myStance()"}
