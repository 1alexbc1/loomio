%md-dialog.poll-common-modal
  %form.poll-proposal-vote-form
    .modal-header.poll-common-modal-header
      %i.material-icons thumbs_up_down
      %h1.lmo-h1{ng-if: "stance.isNew()", translate: "poll_proposal_vote_form.have_your_say"}
      %h1.lmo-h1{ng-if: "!stance.isNew()", translate: "poll_proposal_vote_form.change_your_stance"}
      %modal_header_cancel_button

    .modal-body
      %label{translate: "poll_common.your_response"}
      %md-radio-group{ng-model: "pollOption"}
        %md-radio-button.poll-proposal-vote-form__radio-button{ng-repeat: "option in stance.poll().pollOptions()", ng-value: "option"}
          %img.poll-proposal-form__icon{src: "/img/{{option.name}}.svg"}
          %span.poll-proposal-vote-form__chosen-option--name{translate: "poll_proposal_options.{{option.name}}"}
      .poll-proposal-vote-form__option-meaning{translate: "poll_proposal_options.{{pollOption.name}}_meaning"}

      %md-input-container.md-block
        %label{translate: "poll_proposal_vote_form.reason"}
        %input.lmo-primary-form-input{type: "text", placeholder: "{{translations.reasonPlaceholder}}", ng-model: "stance.reason", mention-field: "true", md-maxlength: "250"}
        %validation_errors{subject: "stance", field: "reason"}

    .modal-footer
      %md-button.md-primary.md-raised{ng-click: "submit()", translate: "poll_proposal_vote_form.vote"}
