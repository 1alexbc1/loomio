.poll-common-results
  %h3= t(:"poll_mailer.common.responses")
  - @info.poll.grouped_stance_choices.each do |poll_option, stance_choices|
    .poll-common-results__poll-option{style: "border-color: #{poll_option.color}"}
      %h4
        - if @info.poll.translate_option_name
          %span= t(:"poll_proposal_options.#{poll_option.name}")
        - else
          %span= poll_option.name.humanize
      %table
        - stance_choices.each do |stance_choice|
          %tr
            %td= render partial: 'poll_mailer/common/avatar', locals: { participant: stance_choice.stance.participant }
            %td.poll-common-results__reason= stance_choice.stance.reason
