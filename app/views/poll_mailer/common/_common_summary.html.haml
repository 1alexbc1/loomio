.poll-common-summary

  -# NB: discussion dependency
  %h1= link_to @info.poll.title, @info.links[:target]
  %p
  - if @info.poll.active?
    %span= t(:closed)
    %span= time_formatted_relative_to_age(@info.poll.closing_at)
  - else
    %span= t(:closed)
    %span= time_formatted_relative_to_age(@info.poll.closed_at)

  %p= @info.poll.details
