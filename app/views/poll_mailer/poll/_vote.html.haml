%h3= t(:"poll_mailer.your_response")
- if @info.recipient_stance
  = render 'poll_mailer/common/your_response'
- else
  %table
    - @info.poll.poll_options.each do |option|
      %tr
        %td= render 'poll_mailer/common/chip', color: option.color
        %td= image_tag @info.choice_img, class: 'poll-mailer__select-ui'
        %td= link_to option.name, poll_url(@info.poll, poll_option_id: option.id)
