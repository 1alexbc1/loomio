        <% else %>
        <% option[:name] %>
        <% end %>
      <% when 'rank' then option[:rank] %>
      <% when 'score' then option[:score] %>
      <% when 'voter_count' then option[:voter_count] %>
      <% when 'average' then option[:average].round(1) %>
      <% when 'voter_percent' then option[:voter_percent].round %>
      <% when 'score_percent' then option[:score_percent].round(1) %>
