.row
  .col-md-6
    = simple_form_for @request do |f|
      = f.input :group_id, collection: current_user.adminable_groups.parents_only.alphabetically.map{|g| [g.full_name, g.id]}
      = f.input :network_id, collection: Network.all
      = f.input :message
      = f.submit 'Request to join Network', class: 'btn btn-primary'
