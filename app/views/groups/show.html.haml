#group
  Group
  %p#name
    %strong Name:
    =@group.name

  #motions
    %strong Motions:
    %ul
      -@group.motions.each do |motion|
        %li=link_to motion.name, group_motion_path(motion)

  #users
    %strong Users:
    %ul
      -@group.users.each do |user|
        %li=user.email
