- if local_assigns[:size] == 'small'
  %a.user-avatar{:href => user_url(user), :style => "width: 24px; margin: 0px;"}
    .v-avatar{:style => "height: 24px; min-width: 24px; width: 24px;", :title => user.name}
      - if user.avatar_url(:small)
        = image_tag user.avatar_url(:small), alt: "#{user.name}"
      - else
        = user.avatar_initials
- else
  %a.user-avatar{:href => user_url(user), :style => "width: 40px; margin: 0px;"}
    .v-avatar{:style => "height: 40px; min-width: 40px; width: 40px;", :title => user.name}
      - if user.avatar_url(:medium)
        = image_tag user.avatar_url(:medium), alt: "#{user.name}"
      - else
        = user.avatar_initials
