- if @following
  - unfollow_url = email_actions_unfollow_discussion_url(discussion_id: @discussion.id, unsubscribe_token: @recipient.unsubscribe_token)
  = t :"email.thread_mailer.turn_off_notifications_text", url: unfollow_url
- else
  - follow_url = email_actions_follow_discussion_url(discussion_id: @discussion.id, unsubscribe_token: @recipient.unsubscribe_token)
  = t :"email.thread_mailer.turn_on_notifications_text", url: follow_url

