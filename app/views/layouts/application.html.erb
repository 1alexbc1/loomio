<!DOCTYPE html>
<html>
<head>
  <title>Tautoko</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="header" style="border-width:0px; border-style:solid; border-bottom-width:1px; padding-bottom:3px; margin-bottom:7px;">
  <% if @user = current_user %>
    Hello <%=@user.email %>  <%=link_to('Sign out', destroy_user_session_path, :method => :delete)%>
   <% else %>
    <%=link_to('Sign in', new_user_session_path)%> or <%=link_to 'Sign Up', new_user_registration_path%>
  <% end %>
</div>
<%= yield %>

</body>
</html>
